{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "Python Debugger: Current File",
          "type": "debugpy",
          "request": "launch",
          "program": "${workspaceFolder}/app.py", // Ganti dengan path ke file Flask utama
          "console": "integratedTerminal"
      },
      {
          "type": "chrome",
          "request": "launch",
          "name": "Launch Chrome against localhost",
          "url": "http://localhost:5000", // Sesuaikan dengan port Flask
          "webRoot": "${workspaceFolder}",
          "preLaunchTask": null
      }
  ]
}