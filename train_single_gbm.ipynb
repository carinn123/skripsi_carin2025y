#!/usr/bin/env python3
# -*- coding: utf-8 -*-
"""
Single-city GradientBoostingRegressor trainer + forecaster (NO argparse).
- Edit the constants below to change dataset path, target city, params, etc.
- Trains 1 model only, evaluates, saves .joblib if R2 >= THRESHOLD_R2.
- Also produces a forward forecast CSV for HORIZON_DAYS using iterative prediction.
"""

from pathlib import Path
import math
import json

import numpy as np
import pandas as pd
import joblib

from sklearn.ensemble import GradientBoostingRegressor
from sklearn.metrics import r2_score, mean_absolute_error, mean_squared_error

# =========================
# ======= CONSTANTS =======
# =========================
DATA_PATH      = r"C:\Users\ASUS\skripsi_carin\data\dataset_filled_ffill_bfill.xlsx"
CITY_NAME      = "Kota Bandung"   # ganti nama kota target
OUTDIR         = r"C:\Users\ASUS\skripsi_carin\models_gbm_single"                       # <-- folder output

# Train/test split (chronological)
TEST_DAYS      = 180

# Simpan model jika R2 test >= threshold ini
THRESHOLD_R2   = 0.80

# Feature engineering
LAGS           = [1, 7, 14]
ROLLS          = [7, 30]

# GBM fixed params (NO argparse, edit di sini)
GBM_PARAMS = dict(
    learning_rate = 0.05,
    n_estimators  = 400,
    max_depth     = 3,
    subsample     = 0.8,
    random_state  = 42
)

# Forecast settings
DO_FORECAST   = True
HORIZON_DAYS  = 120

# =========================
# ==== HOLIDAY FLAGS  =====
# =========================

# Approximate Eid al-Fitr dates (Indonesia) 2020-2025
EID_DATES = [
    "2020-05-24",
    "2021-05-13",
    "2022-05-02",
    "2023-04-22",
    "2024-04-10",
    "2025-03-31",
]

def make_holiday_flags(dates: pd.DatetimeIndex,
                       eid_window_before: int = 14,
                       eid_window_after: int = 7) -> pd.DataFrame:
    idx = pd.DatetimeIndex(dates)
    flags = pd.DataFrame(index=idx)
    flags["month"] = idx.month
    flags["day_of_year"] = idx.dayofyear
    flags["time_index"] = (idx - idx.min()).days
    flags["is_end_of_year"] = ((idx.month == 12) & (idx.day >= 22)).astype(int)
    flags["is_new_year"] = ((idx.month == 1) & (idx.day <= 7)).astype(int)
    is_eid_window = np.zeros(len(idx), dtype=int)
    for d in EID_DATES:
        eid = pd.to_datetime(d)
        start = eid - pd.Timedelta(days=eid_window_before)
        end = eid + pd.Timedelta(days=eid_window_after)
        is_eid_window |= ((idx >= start) & (idx <= end)).astype(int)
    flags["is_ramadhan_eid_window"] = is_eid_window
    return flags

# =========================
# === FEATURE BUILDING ====
# =========================

def build_features(y: pd.Series,
                   lags: list,
                   rolls: list,
                   extra_flags: pd.DataFrame):
    df = pd.DataFrame({"y": y})
    for L in lags:
        df[f"lag_{L}"] = y.shift(L)
    for W in rolls:
        df[f"rollmean_{W}"] = y.rolling(W, min_periods=max(1, W//2)).mean()
    df = df.join(extra_flags, how="left")
    df = df.dropna()
    y_target = df.pop("y")
    return df, y_target

# =========================
# ====== FORECASTING ======
# =========================

def forecast_iterative(model, history: pd.Series, horizon: int,
                       lags: list, rolls: list) -> pd.DataFrame:
    """Day-ahead iterative forecast using the trained model."""
    s = history.copy()
    s.index = pd.DatetimeIndex(s.index)
    future_dates = pd.date_range(s.index[-1] + pd.Timedelta(days=1), periods=horizon, freq="D")
    preds = []

    for d in future_dates:
        # Feature row for date d
        row = {}
        for L in lags:
            row[f"lag_{L}"] = s.iloc[-L] if len(s) >= L else np.nan
        for W in rolls:
            window_vals = s.iloc[-W:] if len(s) >= W else s
            row[f"rollmean_{W}"] = float(np.mean(window_vals)) if len(window_vals) > 0 else np.nan

        row["month"] = d.month
        row["day_of_year"] = d.dayofyear
        row["time_index"] = (d - s.index.min()).days
        row["is_end_of_year"] = int((d.month == 12) and (d.day >= 22))
        row["is_new_year"] = int((d.month == 1) and (d.day <= 7))

        # Eid window flag
        is_eid = 0
        for ed in EID_DATES:
            eid = pd.to_datetime(ed)
            if (d >= eid - pd.Timedelta(days=14)) and (d <= eid + pd.Timedelta(days=7)):
                is_eid = 1
                break
        row["is_ramadhan_eid_window"] = is_eid

        X = pd.DataFrame([row])
        y_hat = float(model.predict(X)[0])
        preds.append(y_hat)
        s.loc[d] = y_hat  # push prediction to history

    out = pd.DataFrame({"date": future_dates, CITY_NAME: preds})
    return out

# =========================
# ========= MAIN ==========
# =========================

def main():
    outdir = Path(OUTDIR)
    outdir.mkdir(parents=True, exist_ok=True)

    # Load data
    p = Path(DATA_PATH)
    if p.suffix.lower() in [".xlsx", ".xls"]:
        df = pd.read_excel(p)
    else:
        df = pd.read_csv(p)

    # Normalize columns
    if df.columns[0].lower() != "date":
        df = df.rename(columns={df.columns[0]: "date"})
    df["date"] = pd.to_datetime(df["date"])
    df = df.sort_values("date").reset_index(drop=True)

    if CITY_NAME not in df.columns:
        raise ValueError(f"Kolom kota '{CITY_NAME}' tidak ditemukan. Cek ejaan/kolom dataset.")

    # Build supervised dataset
    y_raw = pd.to_numeric(df[CITY_NAME], errors="coerce")
    dates = pd.DatetimeIndex(df["date"])
    series = pd.Series(y_raw.values, index=dates)
    flags = make_holiday_flags(dates)
    X, y = build_features(series, LAGS, ROLLS, flags)

    # Chronological split
    if len(X) <= TEST_DAYS + 200:
        raise ValueError(f"Data terlalu pendek untuk split: len(X)={len(X)}, TEST_DAYS={TEST_DAYS}.")

    X_train, X_test = X.iloc[:-TEST_DAYS], X.iloc[-TEST_DAYS:]
    y_train, y_test = y.iloc[:-TEST_DAYS], y.iloc[-TEST_DAYS:]

    # Train fixed-params GBM
    model = GradientBoostingRegressor(**GBM_PARAMS)
    model.fit(X_train, y_train)

    # Evaluate
    y_pred = model.predict(X_test)
    r2   = r2_score(y_test, y_pred)
    mae  = mean_absolute_error(y_test, y_pred)
    rmse = math.sqrt(mean_squared_error(y_test, y_pred))
    mape = float(np.mean(np.abs((y_test - y_pred) / np.clip(np.abs(y_test), 1e-9, None))) * 100.0)

    metrics = dict(
        city=CITY_NAME,
        n=len(X),
        train_n=len(X_train),
        test_n=len(X_test),
        r2=float(r2),
        mae=float(mae),
        rmse=float(rmse),
        mape=float(mape),
        gbm_params=GBM_PARAMS,
        lags=LAGS,
        rolls=ROLLS,
        test_days=TEST_DAYS
    )

    # Save metrics
    city_safe = CITY_NAME.replace("/", "-").replace("\\", "-")
    city_dir = outdir / city_safe
    city_dir.mkdir(parents=True, exist_ok=True)

    (city_dir / "metrics.json").write_text(json.dumps(metrics, ensure_ascii=False, indent=2), encoding="utf-8")

    # Save model if threshold met
    saved_path = None
    if r2 >= THRESHOLD_R2:
        saved_path = city_dir / f"{city_safe}.joblib"
        joblib.dump(model, saved_path)

    # Optional forecast
    forecast_path = None
    if DO_FORECAST and saved_path is not None:
        # Use original history (actuals) to start
        hist = pd.Series(pd.to_numeric(df[CITY_NAME], errors="coerce").values, index=df["date"])
        fut = forecast_iterative(model, hist, HORIZON_DAYS, LAGS, ROLLS)
        forecast_path = city_dir / f"forecast_{HORIZON_DAYS}d.csv"
        fut.to_csv(forecast_path, index=False)

    # Final prints
    print("=== Training Summary ===")
    print(json.dumps(metrics, ensure_ascii=False, indent=2))
    if saved_path:
        print(f"Model saved to: {saved_path}")
    else:
        print(f"Model NOT saved (R2={r2:.4f} < threshold {THRESHOLD_R2})")
    if forecast_path:
        print(f"Forecast saved to: {forecast_path}")

if __name__ == "__main__":
    main()
